# Copy this file to .env and fill in real values. Never commit .env.

# MongoDB connection string (e.g. MongoDB Atlas)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/afeka-trips?retryWrites=true&w=majority

# Same secret must be used by the Next.js middleware for JWT verification/refresh
JWT_SECRET=your-super-secret-key-at-least-32-chars-long

# OpenRouteService API key (https://openrouteservice.org/)
ORS_API_KEY=your-ors-api-key

# Groq API key for LLM enrichment (https://console.groq.com/)
GROQ_API_KEY=your-groq-api-key

# Optional: server port (default 5001; avoid 5000 on macOS â€“ used by AirPlay)
PORT=5001
